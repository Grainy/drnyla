<a name="form"></a>

<div class="l-page-section {{media_item.theme}}">
	{% if media_item.header_title %}
		{% include 'layout/acf/section-header.twig' with {'color': media_item.theme} %}
	{% endif %}

	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 text-center">
				{{media_item.content}}
			</div>
		</div>
	</div>

	<div class="b-single-column-form">
		<div class="container">
			<div class="row">
				<div class="col-sm-8 col-sm-offset-2 b-single-column-form__form">
					{% filter shortcodes %}
						{{media_item.form_shortcode}}
					{% endfilter  %}
				</div>
			</div>
		</div>
	</div>
</div>
