{% extends "base.twig" %}

{% block content %}

<div class="l-page-section l-archive-treatments">
	<div class="container">
		{% for article in treatments %}
			<div class="row">
				<div class="b-latest-articles__article">
					<div class="col-sm-4 js-match-height {% if loop.index is odd %}pull-right{% endif %}">
						{% if article.single_banner_image %}
							<img src="{{TimberImage(article.single_banner_image)|resize(342, 265)}}" alt="">
						{% else %}
							<img src="{{options.default_post_image.url|resize(342, 265)}}" alt="">
						{% endif %}
					</div>


					<div class="col-sm-8 b-latest-articles__article--container js-match-height {% if loop.index is odd %}pull-right{% endif %}">
						<h5><a href="{{article.link}}">{{article.title}}</a></h5>

						{% if article.get_field('custom_blog_intro') %}
							<p class="excerpt">{{article.get_field('custom_blog_intro')}}</p>
						{% else %}
						    <p class="excerpt">{{article.content|excerpt(50)}}</p>
						{% endif %}

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
</div>

{% include 'footer.twig' %}
{% endblock %}


