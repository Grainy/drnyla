

<div class="l-page-section {{media_item.theme}} {% if media_item.has_arrow %}has-arrow{% endif %}">
	{% if media_item.header_title %}
		{% include 'layout/acf/section-header.twig' with {'color': media_item.theme} %}
	{% endif %}



	<div class="b-icon-ctas b-icon-ctas--{{media_item.theme}}">
		<div class="container">
			<div class="row text-center">
				<div class="col-md-10 col-md-offset-1">
					{{media_item.content}}
				</div>
			</div>
			<div class="row">
				<div class="b-icon-ctas__container">
					{% for cta in media_item.calls_to_action %}
					    <div class="text-center b-icon-ctas__single">
					    	<div class="b-icon-ctas__icon" style="background-image: url('{{cta.icon}}')"></div>

					    	<div class="b-icon-ctas__content">
					    		<h3>{{cta.title}}</h3>
					    		{{cta.content}}
					    	</div>

					    	{% if cta.has_button %}
					    		<div class="b-icon-ctas__button">
					    			<a href="{{cta.button_link}}" class="b-button b-button--secondary"><span>{{cta.button_text}}</span></a>
					    		</div>
					    	{% endif %}
					    </div>
					{% endfor %}
				</div>
			</div>


		</div>
	</div>
</div>
